<div class="container">
  <div class="row center">
    <div class="col-md-12">
      <h2>Welcome <span class="member-name"></span></h2>
      <h4>What do you want to cook today?</h4>
    </div>
  </div>

  {{!-- Specific recipe search --}}
  <div class="row">
    <div class="col-md-2"></div>
    <div class="form-group col-md-4 search-view-recipes" id="searchForRecipeForm" style="display:show">
      <h4>Search for a specific dish</h4>
      <input type="text" class="form-control" placeholder="Enter dish name here" id="searchTerm">
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="recipesToSearch" id="my-recipes" value="my-recipes">
          My Recipes
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="recipesToSearch" id="all-recipes" value="all-recipes">
          All Recipes
        </label>
      </div>
      <button type="submit" class="btn btn-primary disabled" id="searchForRecipeButton">Search</button>

      {{!-- Logo separator --}}
      <br>
      <img src="/images/e-logo.png"
        style="height: 52px; width: 216px; display: block; margin-top: 50px; margin-left: 70px;" alt="e-logo">
      <br>

      <h4>Cant decide?</h4>
      <button type="submit" class="btn btn-primary disabled" id="viewAllRecipesButton">View all Recipes</button>

    </div>

    {{!-- Vertical line element --}}
    <div class="col-md-1 vertical"></div>

    {{!-- Dish of the day --}}
    <div class="col-md-6 recommended-recipes" id="dishOftheDay" style="display:show">
      <h4>Would you like to try this?</h4>

      <div class="card border-light mb-3" style="width: 200px;">
        <div class="card-header">Recipe 1</div>
        <div class="card-body">
          <img src="/images/pancake.png" alt="dish-of-the-day" style="height: 250px; width: 400px; display: block;">
        </div>
      </div>
    </div>

  </div>

  {{!-- Create Recipe Button --}}
  <div class="row center" id="addNewRecipe" style="display:show">
    <div class="col-md-12">
      <h4>Have a dish in mind?</h4>
      <button type="submit" class="btn btn-primary disabled" id="addNewRecipeButton">Add a new Recipe</button>
    </div>
  </div>

  {{!-- Food facts & Food Jokes --}}
  <div class="row center" id="food-facts-jokes" style="display:show">

    <div class="col-md-4" id="food-facts">
      <h4>Food for thought:</h4>
      <p class="food-fact"></p>
    </div>

    <div class="col-md-4" id="food-jokes">
      <h4>Laughing stock:</h4>
      <p class="food-joke"></p>
    </div>

  {{!-- View all recipe display --}}
  <div class="col-md-8" id="appendSearchItemsHere" style="display:none">
    <span class="close">&times;</span>
    {{#each recipe}}
    <div class="recipe-card">
      <div class="col">
        <img src="/images/pancake.png" alt="dish-image" style="height: 120px; width: 200px; display: block">
      </div>
      <div class="col">
        <h2>{{this.title}}</h2>
        <p class="recipe-card-prep-time">Preparation Time: {{this.preparationTime}}</p>
        <button class="btn btn-secondary" viewId={{this.id}} class="viewRecipeButton" type="submit">View Recipe</button>
        <button class="btn btn-secondary" editId={{this.id}} class="editRecipeButton" type="submit">Edit Recipe</button>
        <button class="btn btn-secondary" deleteId={{this.id}} class="deleteRecipeButton" type="submit">Delete
          Recipe</button>
      </div>
    </div>
    {{/each}}
  </div>

  {{!-- Create new recipe form --}}
  <div class="col-md-8" id="newRecipeForm" style="display:none">
    <span class="close">&times;</span>
    <form id="recipeForm" enctype="multipart/form-data">
      <div class="form-group">
        <label>Recipe Title.</label>
        <input class="form-control" name="title" id="recipe-title" type="text" required>
      </div>
      <div class="form-group">
        <label>Ingredients. Please enter each ingredient on a new line.</label>
        <textarea class="form-control" id="recipe-ingredients" type="text" rows="9"
          placeholder="250g Kobe Sirloin Steak&#13;&#10;3 tsp salt" required></textarea>
      </div>
      <div class="form-group">
        <label>Instructions. Please enter each instruction on a new line.</label>
        <textarea class="form-control" id="recipe-instructions" type="text" rows="9"
          placeholder="1. Season with salt & pepper&#13;&#10;2. Grill on a very hot pan." required></textarea>
      </div>
      <div class="form-group">
        <label>Servings.</label>
        <input class="form-control" id="recipe-servings" type="number" min="0" required>
      </div>
      <div class="form-group">
        <label>Preparation Time.</label>
        <input class="form-control" id="recipe-preparation-time" type="number" min="0" required>
      </div>
      <div class="form-group">
        <label>Notes.</label>
        <textarea class="form-control" id="recipe-notes" type="text" rows="5" required></textarea>
      </div>
      <div class="form-group">
        <label>Upload An Image (Optional).</label>
        <br>
        <input type="file" id="recipe-image-upload" accept="image/*"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary disabled" id="sendRecipeButton" type="submit">Submit</button>
      </div>
    </form>
  </div>

</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript" src="/js/recipes.js"></script>